<%- include layout/dashboard/header %>
<body>
<%- include layout/dashboard/nav %>
<%- include layout/dashboard/menu %>
  <!-- Page -->
  <div class="page">
    <div class="page-content">
      <b><%= my_var %></b>

      <h2>Settings</h2>

      <h2>Security</h2>
      <form method='POST'>
        <% personal.forEach(function(link) { %>
          <% if(link.status != 'complete') { %>
            <ul style="padding: 0; margin: 0;">
              <li style="list-style: none;"><label class=spacy>Current password:</label> <input type=password name=cur_password /></li>
              <li style="list-style: none;"><label class=spacy>New Password:</label> <input type=password name=new_password /></li>
              <li style="list-style: none;"><label class=spacy>New Password Check:</label> <input type=password name=new_password_chk /></li>
              <li style="list-style: none;"><label class=spacy>Pincode:</label> <input type=password name=pincode /></li>
              <li style="list-style: none;"><label class=spacy></label> <input type=submit value="UPDATE"/></li>
            </ul>
          <% } %>
        <% }); %>
      <input type=hidden name=action value="settings"/>
      <input type=hidden name=sub value="security"/>
      </form>


      <h2>Account</h2>

      <form method='POST'>
        <% account.forEach(function(link) { %>
          <ul style="padding: 0; margin: 0;">
            <li style="list-style: none;"><label class=spacy>Disberse Address:</label> <input type=text size=40 name=address  value="<%= link.address %>" ></li>
            <li style="list-style: none;"><label class=spacy>Email:</label> <input type=text name=email size=30 value="<%= link.email %>" /> </li>
            <li style="list-style: none;"><label class=spacy>Name:</label> <input type=text name=name value="<%= link.name %>" /> </li>
            <li style="list-style: none;"><label class=spacy>Role:</label> <input type=text name=role value="<%= link.role %>" /> </li>
            <li style="list-style: none;"><label class=spacy>Org:</label> <input type=text name=org value="<%= link.org %>" /> </li>
            <li style="list-style: none;"><label class=spacy>City:</label> <input type=text name=city value="<%= link.city %>" /> </li>
            <li style="list-style: none;"><label class=spacy>Country:</label> <input type=text name=country value="<%= link.country %>" /> </li>
            <li style="list-style: none;"><label class=spacy>Phone:</label> <input type=text name=phone value="<%= link.phone %>" /> </li>
            <li style="list-style: none;"><label class=spacy>&nbsp;</label> <input type=submit value="UPDATE"/></li>
          </ul>
        <% }); %>
      <input type=hidden name=action value="settings"/>
      <input type=hidden name=sub value="account"/>
      </form>

    </div>
  </div>
  <!-- End Page -->
</body>
<%- include layout/dashboard/footer %>
