<%- include layout/dashboard/header %>
<body>
<%- include eh7net_nav %>
  <div class="page">
    <div class="page-content">
      <div class="panel">
        <div class="panel-body container-fluid">
          <div class="row row-lg">
				    <div class="col-lg-12">
              <div class="table-wrap">
                <h4 class="table-title">eh7net Blocks</h4>
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Block</th>
                        <th>Hash</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>No. Transactions</th>
                      </tr>
                    </thead>
                    <tbody>
           	        <% blocks.forEach(function(block) { %>
                      <tr>
                        <td><%= block.number %></td>
                        <td><a href='/blocks?block=<%= block.hash %>'><%= block.hash %></a></td>
                        <td>
		         <% if(block.formated_date[2]){ %>
                          <%= block.formated_date[2] %>/<%= block.formated_date[1] %>/<%= block.formated_date[0] %>
			  <% }else{ %>Pending<% } %>
                        </td>
                        <td>
  			<% if(block.formated_date[3]){ %>
                          <%= block.formated_date[3] %>:<%= block.formated_date[4] %>:<%= block.formated_date[5] %>
			  <% }else{ %><% } %>
                        </td>
		         <% if(block.transactions.length > 0){ %>
                          <td><a href='/transactions?block=<%= block.hash %>'><%= block.transactions.length %></a></td>
		         <% } else { %>
                          <td><%= block.transactions.length %></td>
		         <% } %>
                      </tr>
           	        <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
			    </div>
		    </div>
	    </div>
    </div>
  </div>
</body>
<%- include layout/dashboard/footer %>

